<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/maincontainer"
    android:layout_width="104px"
    android:layout_height="208px"
    android:background="#000"
    android:screenOrientation="portrait"
    android:orientation="vertical">
    <!--标题-->
    <TextView
        android:textColor="#f00"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:lineSpacingExtra="1px"
        android:textSize="14px" />

    <LinearLayout
        android:layout_marginLeft="3px"
        android:layout_weight="3.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:id="@+id/content_fragment"
        android:lineSpacingExtra="8px"
        >


    </LinearLayout>
   <!-- <com.kelin.add.kelinsite.add.MarqueeView
        android:gravity="center"
        android:id="@+id/weatherinfo"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:marqueeview_repet_type="repet_interval"
        app:marqueeview_text_distance ="100"
        app:marqueeview_text_size="7"
        android:textColor="#aaf"
        app:marqueeview_text_speed="0.3"

        />-->
    <TextView

        android:background = "#000"
        android:text="周口气象"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="#aaf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:lineSpacingExtra="1px"
        android:textSize="23px" />
    <com.kelin.add.kelinsite.add.MarqueeView
        android:id="@+id/name"
        android:visibility="gone"
        app:marqueeview_text_size="14"
        app:marqueeview_text_speed="0.3"
        app:marqueeview_text_color="#aaf"
        app:marqueeview_repet_type="repet_interval"
        android:contentDescription="周口气象"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"/>
</LinearLayout>